@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">

    <li class="navLi" onclick="toMyPosts()">
        My Discussions
    </li>

    <li class="navLi" onclick="toLikedPosts()">
        Liked Discussions
    </li>

    <li class="navLi" onclick="toLogOff()">
        Log off
    </li>

</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navLi" onclick="toRegister()">
            Register
        </li>

        <li class="navLi" onclick="toLogIn()">
            Log in
        </li>
    </ul>
}
